@model IEnumerable<DeltaXDemo.Models.Movie>

@{
    ViewData["Title"] = "Index";
}


<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayName("Movie")
            </th>
            <th>
                @Html.DisplayName("Year of Release")
            </th>
            <th>
                @Html.DisplayName("Producer")
            </th>
            <th>
                @Html.DisplayName("Actors")
            </th>
            <th>
                @Html.DisplayName("Poster")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Producer.Name)
                </td>
                <td>
                    @foreach (var actor in item.Actors)
                    {
                        <span>@actor.Actor.Name</span>
                        <br/>
                    }
                </td>
                <td>
                    <img src="@item.PosterSRC" style="max-width:50px;max-height:50px" />
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    @*<a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>

